            </Grid>
        </Border>
        
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,312,10,10" IsEnabled="False" TabIndex="13"/>
    </Grid>
